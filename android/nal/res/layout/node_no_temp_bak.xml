<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:orientation="vertical"
	android:background ="@color/skyblue"
	xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout
    android:id="@+id/widget33"
    android:layout_x="0dp"
    android:layout_y="0dp"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">
<Button
    android:id="@+id/back"
    android:background="@drawable/device_main_back"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_weight="1" />
<TextView
    android:id="@+id/widget36"
    android:layout_width="wrap_content"
    android:layout_height="39dp"
    android:text="nuoiss"
    android:layout_gravity="center_horizontal"
    android:layout_weight="5" />
<Button
    android:id="@+id/menu"
    android:background="@drawable/device_main_menu"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="right"
    android:layout_weight="1" />
</LinearLayout>



<LinearLayout
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical">
<TextView
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:layout_gravity="center_horizontal" />
</LinearLayout>
<LinearLayout
	android:layout_width="fill_parent"
	android:layout_height="wrap_content">
<TextView
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:text="home name"/>
<EditText
	android:id="@+id/nodeName"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:textSize="18sp" />
</LinearLayout>
<LinearLayout
	android:layout_width="fill_parent"
	android:layout_height="wrap_content">
<TextView
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:text="home type" />
<Spinner
    android:id="@+id/home_type"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
	android:entries="@array/home_type"
/>
</LinearLayout>
<LinearLayout
	android:layout_width="fill_parent"
	android:layout_height="wrap_content">
<TextView
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:text="home direction" />
<Spinner
    android:id="@+id/direction"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
	android:entries="@array/direction"
/>
</LinearLayout>
<LinearLayout
	android:layout_width="fill_parent"
	android:layout_height="wrap_content">
<TextView
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:text="floor" />
<Spinner
    android:id="@+id/floor"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
	android:entries="@array/floor"
/>
</LinearLayout>
<LinearLayout
	android:layout_width="fill_parent"
	android:layout_height="wrap_content">
<TextView
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:text="home fitment" />
<Spinner
    android:id="@+id/home_design"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
	android:entries="@array/home_design"
/>
</LinearLayout>
</LinearLayout>

