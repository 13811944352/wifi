<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	android:id="@+id/device_main"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:orientation="vertical"
	android:background = "@color/snow"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:weightSum="1">
<LinearLayout
	android:layout_width="fill_parent"
	android:orientation="vertical"
	android:layout_height="60dp"
	android:layout_x="0dp"
	android:layout_y="85dp">

	<TextView
	android:layout_y="25dp"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:text=""
	android:layout_gravity="center_horizontal" />
<TextView
	android:layout_y="25dp"
	android:id="@+id/d_name"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:text="d_name"
	android:layout_gravity="center_horizontal" />
</LinearLayout>

	<LinearLayout
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:layout_weight="0.16"
	android:orientation="horizontal"
	android:layout_marginLeft="30dp"
	android:layout_marginRight="30dp"
	android:background="@drawable/content_bg">

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="房间"
		android:id="@+id/textView4"
		android:layout_weight="2"
		android:layout_gravity="center"
		android:layout_marginLeft="10dp" />

	<Button
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="1"
		android:id="@+id/b1"
		android:layout_weight="1"
		android:background="@null"
		android:textColor="@color/red"
		android:layout_gravity="center_vertical" />

	<Button
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="2"
		android:id="@+id/b2"
		android:layout_weight="1"
		android:background="@null"
		android:layout_gravity="center_vertical" />

	<Button
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="3"
		android:id="@+id/b3"
		android:layout_weight="1"
		android:background="@null"
		android:layout_gravity="center_vertical" />

	<Button
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="4"
		android:id="@+id/b4"
		android:layout_weight="1"
		android:background="@null"
		android:layout_gravity="center_vertical" />

	<Button
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="5"
		android:id="@+id/b5"
		android:layout_weight="1"
		android:background="@null"
		android:layout_gravity="center_vertical" />

	<Button
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="6"
		android:id="@+id/b6"
		android:layout_weight="1"
		android:background="@null"
		android:singleLine="true"
		android:layout_gravity="center_vertical" />

	<Button
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="7"
		android:id="@+id/b7"
		android:layout_weight="1"
		android:background="@null"
		android:layout_gravity="center_vertical" />

	<Button
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="8"
		android:id="@+id/b8"
		android:layout_weight="1"
		android:background="@null"
		android:layout_gravity="center_vertical" />

</LinearLayout>

	<LinearLayout
		android:orientation="horizontal"
		android:layout_x="0dp"
		android:layout_y="0dp"
		android:layout_gravity="center_horizontal"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_marginLeft="30dp"
		android:layout_marginTop="20dp"
		android:layout_marginRight="30dp"
		android:background="@drawable/content_bg" >

		<TextView
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:text="控制端"
			android:layout_weight="1"
			android:layout_gravity="center"
			android:gravity="center_vertical|center_horizontal" />

		<TextView
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:background="@drawable/content_bg"
			android:layout_gravity="center"
			android:gravity="center_vertical|center_horizontal"
			android:text="No.1"
			android:textSize="22sp"
			android:id="@+id/ctl" />

		<LinearLayout
			android:orientation="vertical"
			android:layout_gravity="center_horizontal"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_weight="1.3" >

			<Button
				android:id="@+id/ctl_up"
				android:layout_width="22dp"
				android:layout_height="22dp"
				android:background="@drawable/arrow_up"
				android:layout_centerVertical="true"
				android:layout_marginLeft="20dip"
				android:textSize="15sp" />

			<Button
				android:id="@+id/ctl_down"
				android:layout_width="22dp"
				android:layout_height="22dp"
				android:background="@drawable/arrow_down"
				android:layout_centerVertical="true"
				android:layout_marginLeft="20dip"
				android:textSize="15sp" />
		</LinearLayout>
	</LinearLayout>

	<LinearLayout
		android:orientation="horizontal"
		android:layout_x="0dp"
		android:layout_y="0dp"
		android:layout_gravity="center_horizontal"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_marginLeft="30dp"
		android:layout_marginTop="20dp"
		android:layout_marginRight="30dp"
		android:background="@drawable/content_bg" >

		<TextView
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:text="房间类型"
			android:layout_weight="1"
			android:layout_gravity="center"
			android:gravity="center_vertical|center_horizontal" />

		<TextView
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:background="@drawable/content_bg"
			android:layout_gravity="center"
			android:gravity="center_vertical|center_horizontal"
			android:text="卧室"
			android:textSize="22sp"
			android:id="@+id/type" />

		<LinearLayout
			android:orientation="vertical"
			android:layout_gravity="center_horizontal"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_weight="1.3" >

			<Button
				android:id="@+id/type_up"
				android:layout_width="22dp"
				android:layout_height="22dp"
				android:background="@drawable/arrow_up"
				android:layout_centerVertical="true"
				android:layout_marginLeft="20dip"
				android:textSize="15sp" />

			<Button
				android:id="@+id/type_down"
				android:layout_width="22dp"
				android:layout_height="22dp"
				android:background="@drawable/arrow_down"
				android:layout_centerVertical="true"
				android:layout_marginLeft="20dip"
				android:textSize="15sp" />
		</LinearLayout>
	</LinearLayout>

	<LinearLayout
		android:orientation="horizontal"
		android:layout_x="0dp"
		android:layout_y="0dp"
		android:layout_gravity="center_horizontal"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_marginLeft="30dp"
		android:layout_marginTop="20dp"
		android:layout_marginRight="30dp"
		android:background="@drawable/content_bg" >

		<TextView
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:text="房间朝向"
			android:layout_weight="1"
			android:layout_gravity="center"
			android:gravity="center_vertical|center_horizontal" />

		<TextView
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:background="@drawable/content_bg"
			android:layout_gravity="center"
			android:gravity="center_vertical|center_horizontal"
			android:text="南"
			android:textSize="22sp"
			android:id="@+id/direction" />

		<LinearLayout
			android:orientation="vertical"
			android:layout_gravity="center_horizontal"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_weight="1.3" >

			<Button
				android:id="@+id/direction_up"
				android:layout_width="22dp"
				android:layout_height="22dp"
				android:background="@drawable/arrow_up"
				android:layout_centerVertical="true"
				android:layout_marginLeft="20dip"
				android:textSize="15sp" />

			<Button
				android:id="@+id/direction_down"
				android:layout_width="22dp"
				android:layout_height="22dp"
				android:background="@drawable/arrow_down"
				android:layout_centerVertical="true"
				android:layout_marginLeft="20dip"
				android:textSize="15sp" />
		</LinearLayout>
	</LinearLayout>

	<LinearLayout
		android:orientation="horizontal"
		android:layout_x="0dp"
		android:layout_y="0dp"
		android:layout_gravity="center_horizontal"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_marginLeft="30dp"
		android:layout_marginTop="20dp"
		android:layout_marginRight="30dp"
		android:background="@drawable/content_bg">

		<TextView
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:text="地面装修"
			android:layout_weight="1"
			android:layout_gravity="center"
			android:gravity="center_vertical|center_horizontal" />

		<TextView
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:background="@drawable/content_bg"
			android:layout_gravity="center"
			android:gravity="center_vertical|center_horizontal"
			android:text="实木地板"
			android:textSize="22sp"
			android:id="@+id/design" />

		<LinearLayout
			android:orientation="vertical"
			android:layout_gravity="center_horizontal"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_weight="1.3">

			<Button
				android:id="@+id/design_up"
				android:layout_width="22dp"
				android:layout_height="22dp"
				android:background="@drawable/arrow_up"
				android:layout_centerVertical="true"
				android:layout_marginLeft="20dip"
				android:textSize="15sp" />

			<Button
				android:id="@+id/design_down"
				android:layout_width="22dp"
				android:layout_height="22dp"
				android:background="@drawable/arrow_down"
				android:layout_centerVertical="true"
				android:layout_marginLeft="20dip"
				android:textSize="15sp" />
		</LinearLayout>
	</LinearLayout>

	<LinearLayout
		android:layout_marginTop="20dp"
		android:layout_marginLeft="30dp"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:background="@drawable/content_bg"
		android:layout_marginRight="30dp"
		android:orientation="horizontal">

		<TextView
			android:id="@+id/textView11"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:padding="8dp"
			android:text="房间改名"
			android:textColor="#000"
			android:textSize="17sp" />

		<EditText
			android:id="@+id/uname"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_centerVertical="true"
			android:layout_marginLeft="20dip"
			android:layout_toRightOf="@+id/textView11"
			android:textSize="15sp" />
	</LinearLayout>


	<!--
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_x="0dp"
        android:layout_y="203dp">
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_x="0dp"
        android:layout_y="254dp">
    </LinearLayout>
    -->
</LinearLayout>
