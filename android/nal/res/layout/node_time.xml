<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:orientation="vertical"
	android:background = "@color/snow"
	xmlns:android="http://schemas.android.com/apk/res/android">

<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/title"
    android:layout_x="0dp"
    android:layout_y="0dp">
<Button
    android:id="@+id/back"
    android:background="@drawable/device_main_back"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_weight="1" />
<ImageView
    android:layout_width="wrap_content"
    android:layout_height="39dp"
    android:background="@drawable/node_main_time"
	android:textColor= "@color/snow"
    android:textSize="22sp"
    android:layout_gravity="center"
    android:layout_weight="5" />

<Button
    android:background="@drawable/device_main_menu"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="right"
    android:layout_weight="1" />

</LinearLayout>

<LinearLayout
    android:layout_width="fill_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:layout_x="0dp"
    android:layout_y="285dp">
<TextView
    android:layout_y="25dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text=" "
    android:layout_gravity="center_horizontal" />
<TextView
    android:layout_y="25dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text=""
    android:layout_gravity="center_horizontal" />
<TextView
    android:layout_y="25dp"
    android:id="@+id/d_name"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="d_name"
    android:layout_gravity="center_horizontal" />
<ImageButton
    android:id="@+id/tempButton"
    android:src="@drawable/node_main_temp"
	android:background="#00000000"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal" />
<TextView
    android:layout_y="25dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text=""
    android:layout_gravity="center_horizontal" />
</LinearLayout>

<LinearLayout
    android:layout_x="0dp"
    android:layout_y="0dp"
    android:layout_width="fill_parent"
	android:layout_height="wrap_content"
    android:background="@drawable/content_bg"
    android:orientation="horizontal"
    android:layout_marginLeft="35dp"
    android:layout_gravity="center_horizontal"
    android:layout_marginRight="35dp">
    <TextView 
		android:text="设定温度:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="70dp"
        android:textSize="22dp" />
	<EditText  
		android:id="@+id/temp"  
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"  
        android:layout_centerVertical="true"  
        android:layout_marginLeft="10dip"
        android:layout_toRightOf="@id/account"  
		android:maxLength="2"
		android:text="00"
        android:textSize="22sp" />
<LinearLayout
    android:layout_x="0dp"
    android:layout_y="0dp"
	android:orientation="vertical"
	android:layout_gravity="center_horizontal" 
	android:layout_width="wrap_content"
	android:layout_height="wrap_content">
            <Button
				android:id="@+id/up"  
                android:layout_width="22dp"
                android:layout_height="22dp"  
				android:background="@drawable/arrow_up"
                android:layout_centerVertical="true"  
                android:layout_marginLeft="20dip"  
                android:textSize="15sp" />
            <Button
				android:id="@+id/down"  
                android:layout_width="22dp"
                android:layout_height="22dp"  
				android:background="@drawable/arrow_down"
                android:layout_centerVertical="true"  
                android:layout_marginLeft="20dip"  
                android:textSize="15sp" />
</LinearLayout>
</LinearLayout>

<LinearLayout
	layout_marginTop="50dp"
    android:layout_width="fill_parent"
	android:layout_height="75dp"
    android:layout_marginTop="110dp"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp">
</LinearLayout>

    <LinearLayout
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
    android:layout_marginTop="15dp">
<Button
	android:id="@+id/save"
    android:background="@drawable/node_main_time_save"
    android.weight="1"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
    android:layout_weight="1"
    android:layout_marginRight="30dp"
    android:layout_marginLeft="120dp" />
</LinearLayout>
</LinearLayout>
