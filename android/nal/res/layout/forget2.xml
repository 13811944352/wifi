<?xml version="1.0" encoding="utf-8"?>  
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"  
	android:background = "@color/snow"
	android:layout_width="match_parent"
	android:layout_height="fill_parent"  
	android:orientation="vertical" >  

<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/title"
    android:layout_x="0dp"
    android:layout_y="0dp">
<Button
    android:id="@+id/back"
    android:background="@drawable/reg2_back"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_weight="1" />
<ImageView
    android:layout_width="wrap_content"
    android:layout_height="39dp"
    android:background="@drawable/reg2_title"
    android:textColor= "@color/snow"
    android:layout_gravity="center"
    android:layout_weight="5" />

</LinearLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="已发送验证码到"
        android:textColor="#000"
        android:textSize="17sp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="50dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="13811944352"
        android:textColor="#000"
        android:textSize="26sp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="0dp" />

    <LinearLayout
	android:background="@drawable/content_bg"
    android:layout_marginTop="15dip" 
    android:layout_marginLeft="50dip" 
    android:layout_marginRight="50dip" 
    android:layout_width="fill_parent"  
    android:layout_height="wrap_content">
            <TextView  
                android:id="@+id/account1"
                android:layout_width="wrap_content"  
                android:layout_height="wrap_content"  
                android:padding="8dp"  
                android:text="验证码"
                android:textColor="#000"  
                android:textSize="17sp" />

            <EditText  
                android:id="@+id/pwd"  
                android:layout_width="fill_parent"  
                android:layout_height="wrap_content"  
                android:layout_centerVertical="true"  
                android:layout_marginLeft="20dip"  
                android:layout_toRightOf="@id/account"  
				android:inputType="textPassword"
                android:background="@null"  
                android:hint="请输入验证码"
                android:textSize="15sp" />
</LinearLayout>

    <Button
        android:layout_marginTop="20dp"
        android:id="@+id/captButton"
        android:layout_marginLeft="50dip" 
        android:layout_marginRight="50dip" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/reg2_next"
        />

<LinearLayout 
    android:layout_marginTop="15dip" 
    android:layout_marginLeft="50dip" 
    android:layout_marginRight="50dip" 
    android:layout_width="fill_parent"  
    android:layout_height="wrap_content">

    <Button
        android:id="@+id/capt_again"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:text="重发验证码?" />
</LinearLayout>
</LinearLayout> 
