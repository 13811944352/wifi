<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/title"
    android:layout_x="0dp"
    android:layout_y="0dp">
<Button
    android:id="@+id/back"
    android:background="@drawable/device_main_back"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_weight="1" />
<TextView
    android:id="@+id/widget36"
    android:layout_width="wrap_content"
    android:layout_height="39dp"
    android:text="            nuoiss"
    android:textColor="#000"  
    android:textSize="25sp"
    android:layout_gravity="center_horizontal"
    android:layout_weight="5" />
<com.android.nal.MySpinnerButton 
    android:id="@+id/menu"
    android:background="@drawable/device_main_menu"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="right"
    android:layout_weight="1" />
</LinearLayout>

<LinearLayout
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:orientation="vertical">
<TextView
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_gravity="center_horizontal" />
</LinearLayout>


<LinearLayout
android:orientation="horizontal"
android:layout_x="0dp"
android:layout_y="0dp"
android:layout_gravity="center_horizontal" 
android:layout_width="fill_parent"
android:layout_height="wrap_content">
<TextView
android:id="@+id/nodename"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="&#21351;&#23460;"
android:layout_gravity="center_horizontal" />
<Button
android:id="@+id/nodename_modify"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="改名"
android:layout_gravity="center_horizontal" />
</LinearLayout>

<LinearLayout
	android:layout_width="fill_parent"
	android:layout_height="wrap_content">
<TextView
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:text="房间类型" />
<Spinner
    android:id="@+id/home_type"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
	android:entries="@array/home_type"
/>
</LinearLayout>

<LinearLayout
	android:layout_width="fill_parent"
	android:layout_height="wrap_content">
<TextView
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:text="房间朝向" />
<Spinner
    android:id="@+id/direction"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
	android:entries="@array/direction"
/>
</LinearLayout>

<LinearLayout
	android:layout_width="fill_parent"
	android:layout_height="wrap_content">
<TextView
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:text="房间楼层" />
<Spinner
    android:id="@+id/floor"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
	android:entries="@array/floor"
/>
</LinearLayout>

<LinearLayout
	android:layout_width="fill_parent"
	android:layout_height="wrap_content">
<TextView
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:text="装修类型" />
<Spinner
    android:id="@+id/home_design"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
	android:entries="@array/home_design"
/>
</LinearLayout>

<LinearLayout
	android:layout_width="fill_parent"
	android:layout_height="wrap_content">
<Button
    android:id="@+id/done"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:text="确定" />
<Button
    android:id="@+id/cancel"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:text="取消" />
</LinearLayout>
</LinearLayout>

